<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="LocalizeMaster"
             x:Class="LocalizeMaster.App">
  <Application.Styles>
    <FluentTheme Mode="Dark"/>
    <Style Selector="Grid.Menu">
      <Setter Property="Background" Value="#11333333"/>
    </Style>
    <Style Selector="Grid.Menu Button">
      <Setter Property="Margin" Value="5 0"/>
      <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <Style Selector="Grid.Menu ComboBox">
      <Setter Property="Margin" Value="5"/>
    </Style>
  </Application.Styles>

</Application>
